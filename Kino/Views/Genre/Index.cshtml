@{
    ViewData["Title"] = "Genres";
}

<div>
<h1>Genres:</h1>
<table class="table-bordered">
    <thead>
        <tr>
        <th >ID</th>
        <th >Genre</th>
        <th >Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.Id</td>
                <td>@genre.Name</td>
                <td>
                    <a asp-controller="Genre" asp-action="Edit" class="btn btn-secondary" asp-route-id="@genre.Id">Edit</a>
                    <a asp-controller="Genre" asp-action="Remove" class=" btn btn-secondary" asp-route-id="@genre.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<a class="btn btn-primary" asp-area="" asp-controller="Genre" asp-action="Create">Add new Genre</a>


@{
    ViewData["Title"] = "Movies";
}

<div>
<h1>Movies:</h1>
<table class="table-bordered">
    <thead>
        <tr>
        <th>Title</th>
        <th>Duration</th>
        <th>Projection Time</th>
        <th>Genre</th>
        <th>Director</th>
        <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Duration</td>
                <td>@movie.ProjectionTime</td>
                <td>@movie.Genre.Name</td>
                <td>@movie.Director.Name</td>
                <td><a asp-controller="Movie_Actor" asp-action="Index" asp-route-movieId="@movie.Id" class="btn btn-secondary">Actors List</a> 
                    <a asp-controller="Movie" asp-action="Remove" class=" btn btn-secondary" asp-route-id="@movie.Id">Remove</a></td>
            </tr>
        }
    </tbody>
</table>
</div>

<a class="btn btn-primary" asp-area="" asp-controller="Movie" asp-action="Create">Add new Movie Projection</a>
<a class="btn btn-primary" asp-area="" asp-controller="Movie_Actor" asp-action="Create">Add an actor to Movie</a>


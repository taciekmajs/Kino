@{
    ViewData["Title"] = "Directors";
}

<div>
<h1>Directors:</h1>
<table class="table-bordered">
    <thead>
        <tr>
        <th >ID</th>
        <th >Director</th>
        <th >Number of Awards</th>
        <th >Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var director in Model)
        {
            <tr>
                <td>@director.Id</td>
                <td>@director.Name</td>
                <td>@director.AwardsNumber</td>
                <td>
                    <a asp-controller="Director" asp-action="Edit" class="btn btn-secondary" asp-route-id="@director.Id">Edit</a>
                    <a asp-controller="Director" asp-action="Remove" class=" btn btn-secondary" asp-route-id="@director.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<a class="btn btn-primary" asp-area="" asp-controller="Director" asp-action="Create">Add new Director</a>

